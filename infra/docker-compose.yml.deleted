version: "3.7"

services:
  nginx:
    # image: nginx:1.23.3
    image: nginx:1.28.0
    restart: always
    container_name: "nginx"
    volumes:
      - /storage/nvme/nginx/conf.d:/etc/nginx/conf.d # no need to modify permissions
    ports:
      - 80:80
      - 443:443

  gitlab:
    image: gitlab/gitlab-ce:15.8.1-ce.0
    restart: unless-stopped
    container_name: "gitlab"
    hostname: "gitlab.home.dev"
    environment:
      GITLAB_OMNIBUS_CONFIG: |
        external_url "http://192.168.1.70"
    ports:
      - 42001:80
    volumes:
      - /storage/nvme/gitlab/config:/etc/gitlab
      - /storage/nvme/gitlab/logs:/var/log/gitlab
      - /storage/nvme/gitlab/data:/var/opt/gitlab
    shm_size: "256m"

  nexus:
    # image: sonatype/nexus3:3.46.0
    image: sonatype/nexus3:3.80.0
    restart: unless-stopped
    container_name: "nexus3"
    volumes:
      - /storage/nvme/nexus/data:/nexus-data # ensure "chown -R 200:200 ./nexus/data"
    ports:
      - 42002:8081

  prometheus:
    # image: prom/prometheus:v2.42.0
    image: prom/prometheus:v3.4.1
    restart: unless-stopped
    container_name: "prometheus"
    ports:
      - 42003:9090
    volumes:
      - /storage/nvme/prometheus/data:/prometheus # ensure "chown -R 65534:65534 ./prometheus"
      - /storage/nvme/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml # ensure "chown -R 65534:65534 ./prometheus"
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--storage.tsdb.path=/prometheus"
      - "--storage.tsdb.retention.time=731d" # 2 years

  node-exporter:
    # image: prom/node-exporter:v1.5.0
    image: prom/node-exporter:v1.9.1
    restart: unless-stopped
    container_name: "node-exporter"
    user: root
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
    ports:
      - 42004:9100
    command:
      - '--path.procfs=/host/proc'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.ignored-mount-points="^/(sys|proc|dev|host|etc|rootfs/var/lib/docker/containers|rootfs/var/lib/docker/overlay2|rootfs/run/docker/netns|rootfs/var/lib/docker/aufs)($$|/)"'

  cadvisor:
    # image: gcr.io/cadvisor/cadvisor:v0.47.0
    image: gcr.io/cadvisor/cadvisor:v0.52.1
    restart: unless-stopped
    container_name: "cadvisor"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:rw
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    ports:
      - 42005:8080

  grafana:
    # image: grafana/grafana:9.3.6
    image: grafana/grafana:12.0.1
    restart: unless-stopped
    container_name: grafana
    volumes:
      - /storage/nvme/grafana/data:/var/lib/grafana # ensure "chown -R 472:0 ./grafana/data"
      - /storage/nvme/grafana/provisioning/datasources:/etc/grafana/provisioning/datasources # ensure "chown -R 472:0 ./grafana/provisioning"
      - /storage/nvme/grafana/dashboard.yaml:/etc/grafana/provisioning/dashboards/main.yaml # ensure "chown -R 472:0 ./grafana/dashboard.yaml"
      - /storage/nvme/grafana/dashboards:/var/lib/grafana/dashboards # ensure "chown -R 472:0 ./grafana/dashboards"
    environment:
      - GF_SECURITY_ADMIN_USER=admin
      - GF_SECURITY_ADMIN_PASSWORD=admin
      - DS_PROMETHEUS=Prometheus # this is Datasource name. See grafana/provisioning/datasources/prometheus.dev.yml
      - GF_DASHBOARDS_DEFAULT_HOME_DASHBOARD_PATH=/etc/grafana/provisioning/dashboards/OS_Monitoring.json
    depends_on:
      - prometheus
    ports:
      - 42006:3000

  postgres:
    image: postgres:15.2
    # image: postgres:17.5
    restart: unless-stopped
    container_name: postgres
    command:
      - "postgres"
      - "-c"
      - "max_connections=50"
      - "-c"
      - "shared_buffers=1GB"
      - "-c"
      - "effective_cache_size=4GB"
      - "-c"
      - "work_mem=16MB"
      - "-c"
      - "maintenance_work_mem=512MB"
      - "-c"
      - "random_page_cost=1.1"
      - "-c"
      - "temp_file_limit=10GB"
      - "-c"
      - "log_min_duration_statement=200ms"
      - "-c"
      - "idle_in_transaction_session_timeout=10s"
      - "-c"
      - "lock_timeout=1s"
      - "-c"
      - "statement_timeout=60s"
      - "-c"
      - "shared_preload_libraries=pg_stat_statements"
      - "-c"
      - "pg_stat_statements.max=10000"
      - "-c"
      - "pg_stat_statements.track=all"
    environment:
      POSTGRES_DB: "crawlerdb"
      POSTGRES_USER: "crawler"
      POSTGRES_PASSWORD: "password"
      PGDATA: "/var/lib/postgresql/data/pgdata"
    volumes:
      - /storage/nvme/postgres/init:/docker-entrypoint-initdb.d
      - /storage/nvme/postgres/data:/var/lib/postgresql/data
    ports:
      - 42007:5432
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U crawler -d crawlerdb"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 4G

  postgres-exporter:
    # image: bitnami/postgres-exporter:0.11.1
    image: bitnami/postgres-exporter:0.17.1
    restart: unless-stopped
    container_name: postgres-exporter
    environment:
      DATA_SOURCE_URI: "192.168.1.70:42007/crawlerdb?sslmode=disable"
      DATA_SOURCE_USER: "crawler"
      DATA_SOURCE_PASS: "password"
      PG_EXPORTER_EXTEND_QUERY_PATH: "/etc/postgres_exporter/queries.yaml"
    volumes:
      - /storage/nvme/postgres/exporter/queries.yaml:/etc/postgres_exporter/queries.yaml:ro
    ports:
      - 42008:9187
    deploy:
      resources:
        limits:
          cpus: '0.2'
          memory: 500M

  pgadmin:
    # image: dpage/pgadmin4:6.20
    image: dpage/pgadmin4:9.4.0
    restart: unless-stopped
    container_name: pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: "pgadmin@mail.local"
      PGADMIN_DEFAULT_PASSWORD: "password"
      PGADMIN_CONFIG_SERVER_MODE: "False"
    volumes:
      - /storage/nvme/pgadmin:/var/lib/pgadmin # ensure "chown -R 5050:0 ./pgadmin/"
    ports:
      - 42009:80
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 1G

  minio:
    # image: minio/minio:RELEASE.2023-02-27T18-10-45Z
    image: minio/minio:RELEASE.2025-05-24T17-08-30Z
    restart: unless-stopped
    container_name: minio
    ports:
      - 42010:9000
      - 42011:9001
    volumes:
      - /storage/ssd/minio:/data
    environment:
      MINIO_ROOT_USER: "admin"
      MINIO_ROOT_PASSWORD: "password"
      MINIO_PROMETHEUS_AUTH_TYPE: "public"
      MINIO_PROMETHEUS_JOB_ID: "minio" # same as in ./prometheus/prometheus.yml
      MINIO_PROMETHEUS_URL: "http://192.168.1.70:42003" # same as in ./prometheus/prometheus.yml
    command: server --console-address ":9001" /data

  jupyter:
    # image: jupyter/datascience-notebook:notebook-6.5.2
    image: quay.io/jupyter/datascience-notebook:2025-05-30
    restart: unless-stopped
    container_name: jupyter
    ports:
      - 42012:8888
    environment:
      JUPYTER_ENABLE_LAB: "yes"
      JUPYTER_TOKEN: "password"
    volumes:
      - /storage/nvme/jupyter/notebooks:/home/jovyan/notebooks # ensure "chown -R 1000:100 ./jupyter"

  carto:
    image: sverhoeven/cartodb:py3pg12postgis3
    restart: unless-stopped
    container_name: carto
    ports:
      - 42013:80
    environment:
      CARTO_HOSTNAME: carto.dev
    volumes:
      - /storage/nvme/carto:/var/lib/postgresql # ensure "chmod 750 ./carto/12 && chmod 750 ./carto/12/main && chown -R 103:105 ./carto" and fill up with data as mentioned in ../README.md

